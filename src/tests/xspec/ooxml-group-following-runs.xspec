  <x:scenario>
    <x:label>Combine runs</x:label>
    <x:context>
      <w:p>
        <w:pPr>
          <w:pStyle w:val="Vyznamrimske" />
        </w:pPr>
        <w:r>
          <w:rPr>
            <w:rStyle w:val="delimitatorvyznamu" />
          </w:rPr>
          <w:t xml:space="preserve">I. </w:t>
        </w:r>
        <w:r>
          <w:t>citoslovce</w:t>
        </w:r>
      </w:p>      
    </x:context>
    <x:expect label="w:t elements are not merged">
      <w:p>
        <w:pPr>
          <w:pStyle w:val="Vyznamrimske" />
        </w:pPr>
        <w:r>
          <w:rPr>
            <w:rStyle w:val="delimitatorvyznamu" />
          </w:rPr>
          <w:t xml:space="preserve">I. </w:t>
        </w:r>
        <w:r>
          <w:t>citoslovce</w:t>
        </w:r>
      </w:p>      
    </x:expect>
  </x:scenario>
