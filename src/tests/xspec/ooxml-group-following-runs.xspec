            <w:sz w:val="24" />
            <w:szCs w:val="24" />
          </w:rPr>
          <w:t>betwe</w:t>
        </w:r>
        <w:r w:rsidR="009B445D">
          <w:rPr>
            <w:rFonts w:ascii="Times New Roman" w:hAnsi="Times New Roman" w:cs="Times New Roman" />
            <w:sz w:val="24" />
            <w:szCs w:val="24" />
          </w:rPr>
          <w:t>e</w:t>
        </w:r>
        <w:r>
          <w:rPr>
            <w:rFonts w:ascii="Times New Roman" w:hAnsi="Times New Roman" w:cs="Times New Roman" />
            <w:sz w:val="24" />
            <w:szCs w:val="24" />
          </w:rPr>
          <w:t>n</w:t>
        </w:r>
        <w:r>
          <w:rPr>
            <w:rFonts w:ascii="Times New Roman" w:hAnsi="Times New Roman" w:cs="Times New Roman" />
            <w:sz w:val="24" />
            <w:szCs w:val="24" />
          </w:rPr>
          <w:tab />
          <w:t>text</w:t>
        </w:r>
      </w:p>
    </x:context>
    <x:expect label="w:t elements are merged, w:tab is keeped">
